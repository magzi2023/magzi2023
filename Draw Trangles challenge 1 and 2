PRINT TRIANGLE 20 AT TOP, 1 AT BOTTOM (DRAW TRIANGLE 1 CHALLENGE)

DROP PROCEDURE IF EXISTS P;
DELIMITER // 
CREATE PROCEDURE P(IN R INT)

BEGIN
DECLARE COUNTER INT DEFAULT 0;
DECLARE P INT;
DECLARE X INT DEFAULT R;
WHILE COUNTER <= R DO
    SELECT REPEAT('* ', X);
    SET COUNTER=COUNTER+1;
    SET X=X-1;
END WHILE;
END//
DELIMITER ;

call P(20);


PRINT TRIANGLE 1 AT TOP, 20 AT BOTTOM (DRAW TRIANGLE 2 CHALLENGE)

DROP PROCEDURE IF EXISTS P;
DELIMITER // 
CREATE PROCEDURE P(IN R INT)

BEGIN
DECLARE COUNTER INT DEFAULT R;
DECLARE P INT;
DECLARE X INT DEFAULT 1;
WHILE COUNTER >= 1 DO
    SELECT REPEAT('* ', X);
    SET COUNTER=COUNTER-1;
    SET X=X+1;
END WHILE;
END//
DELIMITER ;

call P(20);
